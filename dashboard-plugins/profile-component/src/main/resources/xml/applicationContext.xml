<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:jaxrs="http://cxf.apache.org/jaxrs"
       xmlns:cxf="http://cxf.apache.org/core"
       xmlns:couchbase="http://www.springframework.org/schema/data/couchbase"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://cxf.apache.org/jaxrs http://cxf.apache.org/schemas/jaxrs.xsd http://cxf.apache.org/core http://cxf.apache.org/schemas/core.xsd http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd http://www.springframework.org/schema/data/couchbase http://www.springframework.org/schema/data/couchbase/spring-couchbase.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

  <!-- Scan for Spring annotated classes-->
  <context:component-scan base-package="{{componentsPackage}}"/>

  <!-- Load service configuration from a property file -->
  <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
    <property name="locations">
      <value>file:${catalina.base}/conf/{{namespace}}.properties</value>
    </property>
  </bean>

    <!-- Generic Jackson JSON Provider to (un)marshall JSON to annotated POJO's -->
    <bean id="jacksonJsonProvider" class="org.codehaus.jackson.jaxrs.JacksonJsonProvider"/>

    <!-- Exception Handling -->
    <bean id="esbExceptionMapper" class="{{componentsPackage}}.exception.EsbExceptionMapper"/>

    <!-- Web Service Client for the study program service (REST) -->
    <jaxrs:client id="gradeService"
                  serviceClass="{{componentsPackage}}.services.GradeService"
                  address="${esb.endpoint.grades}"
                  username="${esb.basic.username}"
                  password="${esb.basic.password}"
                  inheritHeaders="true">
        <jaxrs:features>
            <cxf:logging/>
        </jaxrs:features>
        <jaxrs:headers>
            <entry key="Accept" value="application/json"/>
        </jaxrs:headers>
        <jaxrs:providers>
            <ref bean="jacksonJsonProvider"/>
            <ref bean="esbExceptionMapper"/>
        </jaxrs:providers>
    </jaxrs:client>

    <!-- Web Service Client for the study program service (REST) -->
    <jaxrs:client id="studyProgramService"
                  serviceClass="{{componentsPackage}}.services.StudyProgramService"
                  address="${esb.endpoint.studyprograms}"
                  username="${esb.basic.username}"
                  password="${esb.basic.password}"
                  inheritHeaders="true">
        <jaxrs:features>
            <cxf:logging/>
        </jaxrs:features>
        <jaxrs:headers>
            <entry key="Accept" value="application/json"/>
        </jaxrs:headers>
        <jaxrs:providers>
            <ref bean="jacksonJsonProvider"/>
            <ref bean="esbExceptionMapper"/>
        </jaxrs:providers>
    </jaxrs:client>

